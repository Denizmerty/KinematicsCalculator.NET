<ContentDialog
    x:Class="KinematicsCalculator.NET.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KinematicsCalculator.NET"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="About Kinematics Calculator"
    CloseButtonText="OK"
    DefaultButton="Close">

    <StackPanel Spacing="10">
        <TextBlock Text="Version 1.0.1" Style="{ThemeResource SubtitleTextBlockStyle}"/>
        <TextBlock Text="A simple tool for 1D constant acceleration kinematics calculations based on Newton's equations." TextWrapping="Wrap"/>
        <TextBlock Text="Requires exactly 3 known values to solve for an unknown."/>
        <TextBlock TextWrapping="Wrap">
            <Run Text="For questions and suggestions, reach me at "/>
            <Hyperlink NavigateUri="mailto:denizmerty@gmail.com">denizmerty@gmail.com</Hyperlink>
        </TextBlock>
    </StackPanel>
</ContentDialog>
